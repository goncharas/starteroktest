                <label class="col-sm-2 control-label" for="input-description_location_type">{{ entry_description_location_type }}</label>
                <div class="col-sm-10">
                  <input type="text" name="location_description[{{ language.language_id }}][location_type]" value="{{ location_description[language.language_id] ? location_description[language.language_id].location_type }}" placeholder="{{ entry_description_location_type }}"  id="input-description_location_type{{ language.language_id }}" class="form-control" />
                       {% if error_description_location_type[language.language_id] %}
                      <div class="text-danger">{{ error_description_location_type[language.language_id] }}</div>
                      {% endif %}
               </div>
              </div>
		
		
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-description_name{{ language.language_id }}">{{ entry_description_name }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="location_description[{{ language.language_id }}][name]" value="{{ location_description[language.language_id] ? location_description[language.language_id].name }}" placeholder="{{ entry_description_name }}" id="input-description_name{{ language.language_id }}" class="form-control" />
                   {% if error_description_name[language.language_id] %}
                  <div class="text-danger">{{ error_description_name[language.language_id] }}</div>
                  {% endif %}
                   </div>
                  </div>

		  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-city{{ language.language_id }}">{{ entry_description_city }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="location_description[{{ language.language_id }}][city]" value="{{ location_description[language.language_id] ? location_description[language.language_id].city }}" placeholder="{{ entry_description_city }}" id="input-description_city{{ language.language_id }}" class="form-control" />
                   {% if error_description_city[language.language_id] %}
                  <div class="text-danger">{{ error_description_city[language.language_id] }}</div>
                  {% endif %}
