		  </div>
		  
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-description_address{{ language.language_id }}">{{ entry_description_address }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="location_description[{{ language.language_id }}][address]" value="{{ location_description[language.language_id] ? location_description[language.language_id].address }}" placeholder="{{ entry_description_address }}" id="input-description_address{{ language.language_id }}" class="form-control" />
                      {% if error_description_address[language.language_id] %}
                      <div class="text-danger">{{ error_description_address[language.language_id] }}</div>
                      {% endif %}
                    </div>
                  </div>
		  
                  <div class="form-group" style="display:none">
                    <label class="col-sm-2 control-label" for="input-description_email{{ language.language_id }}">{{ entry_description_email }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="location_description[{{ language.language_id }}][email]" value="{{ location_description[language.language_id].email ? location_description[language.language_id].email }}" placeholder="{{ entry_description_email }}" id="input-description_email{{ language.language_id }}" class="form-control" />
                  {% if error_description_email[language.language_id] %}
                  <div class="text-danger">{{ error_description_email[language.language_id] }}</div>
                  {% endif %}
                    </div>
                  </div>
		  
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-description_schedule{{ language.language_id }}">{{ entry_description_schedule }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="location_description[{{ language.language_id }}][schedule]" value="{{ location_description[language.language_id].schedule ? location_description[language.language_id].schedule }}" placeholder="{{ entry_description_schedule }}" id="input-description_schedule{{ language.language_id }}" class="form-control" />
                  {% if error_description_schedule[language.language_id] %}
                  <div class="text-danger">{{ error_description_schedule[language.language_id] }}</div>
                  {% endif %}
                    </div>
                  </div>
		  
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-description_comment{{ language.language_id }}">{{ entry_description_comment }}</label>
                    <div class="col-sm-10">
                      <textarea name="location_description[{{ language.language_id }}][comment]" rows="5" placeholder="{{ entry_description_comment }}" id="input-description_comment{{ language.language_id }}" class="form-control" >{{ location_description[language.language_id].comment ? location_description[language.language_id].comment }}</textarea>
                    {% if error_description_comment[language.language_id] %}
                  <div class="text-danger">{{ error_description_comment[language.language_id] }}</div>
