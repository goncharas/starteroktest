<div class="col-sm-3">
<div class="list-group">
    <ul class="aside-menu tdc-menu">
    {% for category in categories %}
        <li>
            {% if category.href == '' %}
                <span>{{ category.name }}</span>
            {% else %}
                <a href="{{ category.href }}" class="list-group-item {% if tecdocCategoryId != '' and category.prd_id == tecdocCategoryId %} active{% endif %}{% if category.children %} has-children{% endif %}">{{ category.name }}</a>
            {% endif %}
            
            {% if category.children %}
                <ul>
                {% for child in category.children %}
                    <li>
                        {% if child.href == '' %}
                            <span>{{ child.name }}</span>
                        {% else %}
                            <a href="{{ child.href }}" class="list-group-item {% if tecdocCategoryId != '' and child.prd_id == tecdocCategoryId %} active{% endif %}{% if child.children %} has-children{% endif %}">{{ child.name }}</a> 
                        {% endif %}
                        
