                                    {% endif %}
                                    
                                    {% if child2.children %}
                                        <ul>
                                        {% for child3 in child2.children %}
                                            <li>
                                                {% if child2.href == '' %}
                                                    <span>{{ child2.name }}</span>
                                                {% else %}
                                                    <a href="{{ child3.href }}" class="list-group-item {% if tecdocCategoryId != '' and child3.prd_id == tecdocCategoryId %} active{% endif %}{% if child3.children %} has-children{% endif %}">{{ child3.name }}</a> 
                                                {% endif %}
                                                
                                                {% if child3.children %}
