<h2 class="sec-title">{{ heading_title }}</h2>
<div class="row">
 {% for article in articles %}
  <div class="product-layout col-lg-4 col-md-4 col-sm-6 col-xs-12">
    <div class="product-thumb transition blog-article">
      <div class="image"><a href="{{ article.href }}"><img src="{{ article.thumb }}" alt="{{ article.name }}" title="{{ article.name }}" class="img-responsive" /></a></div>
      <div class="caption">
        <h4><a href="{{ article.href }}" class="blog-article__caption__link">{{ article.name }}</a></h4>
        <div class="blog-article__dates">
            {{ article.date_added }}
        </div>
        {% if article.rating %}
        <div class="rating">
          {% for i in 5 %}
          {% if article.rating < i %}
          <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
          {% else %}
          <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
          {% endif %}
          {% endfor %}
        </div>
        {% endif %}
      </div>
    </div>
  </div>
  {% endfor %}
</div>
